{
  "name": "dabbu-files-api-server",
  "version": "1.7.3",
  "description": "An implementation of the Dabbu Files API that enables you to access your files, folders and emails stored with multiple providers as simple files and folders, all in one place!",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "clean": "rm -r dist/ && mkdir dist/",
    "check-format": "npx prettier --check .",
    "format": "npx prettier --write .",
    "prebuild": "npm run check-format",
    "build": "npx pkg --output dist/files-api-server .",
    "test": "echo \"Error: no test specified\"; exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dabbu-knowledge-platform/files-api-server.git"
  },
  "author": "gamemaker1",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/dabbu-knowledge-platform/files-api-server/issues"
  },
  "homepage": "https://github.com/dabbu-knowledge-platform/files-api-server#readme",
  "dependencies": {
    "archiver": "^5.2.0",
    "axios": "^0.21.1",
    "breakdance": "3.0.1",
    "express": "^4.17.1",
    "file-type": "16.2.0",
    "fs-extra": "^9.1.0",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "pkg": "^4.4.9",
    "prettier": "2.2.1"
  },
  "bin": "src/server.js",
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "src/**/*"
    ],
    "targets": [
      "node15-linux-x64",
      "node15-macos-x64",
      "node15-win-x64"
    ]
  },
  "engines": {
    "node": "15.11.0",
    "npm": "7.6.3"
  }
}
