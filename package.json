{
	"name": "files-api-server",
	"version": "3.0.0-alpha.0",
	"main": "dist/app.js",
	"bin": "dist/server.js",
	"repository": "https://github.com/dabbu-knowledge-platform/files-api-server",
	"author": "Vedant K (gamemaker1) <gamemaker0042@gmail.com>",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"start": "yarn build && node dist/server.js",
		"start:dev": "yarn build && env NODE_ENV=DEV PORT=8000 node dist/server.js",
		"start:prod": "yarn build && env NODE_ENV=PROD PORT=8000 node dist/server.js",
		"test": "yarn build && yarn jest --test-timeout 50000",
		"coverage": "yarn build && yarn test --coverage && echo 'View coverage report at http://localhost:23984' && python -m http.server --directory coverage/lcov-report/ 23984",
		"lint": "yarn build && yarn eslint 'src/**/*.ts' 'tests/**/*.ts'",
		"fix": "yarn build && yarn eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
		"clean": "yarn rimraf dist/ coverage/ execs/",
		"build": "yarn clean && yarn tsc",
		"execs": "yarn build && yarn pkg .",
		"ci": "yarn lint && yarn test && yarn execs"
	},
	"dependencies": {
		"archiver": "^5.3.0",
		"axios": "^0.21.1",
		"breakdance": "^3.0.1",
		"env-paths": "^2.2.1",
		"express": "^4.17.1",
		"file-type": "^16.4.0",
		"fs-extra": "^9.1.0",
		"helmet": "^4.5.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.2",
		"nanoid": "^3.1.22",
		"sqlite3": "^5.0.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/archiver": "^5.1.0",
		"@types/express": "^4.17.11",
		"@types/fs-extra": "^9.0.11",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^26.0.22",
		"@types/morgan": "^1.9.2",
		"@types/multer": "^1.4.5",
		"@types/nanoid": "^2.1.0",
		"@types/node": "^14.14.41",
		"@types/sqlite3": "^3.1.7",
		"@types/supertest": "^2.0.11",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"pkg": "^5.0.0",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"superagent": "^6.1.0",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.5",
		"typescript": "^4.2.4"
	},
	"jest": {
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		]
	},
	"prettier": {
		"semi": false,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 72,
		"useTabs": true,
		"tabWidth": 2
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "next",
			"sourceType": "module"
		},
		"extends": [
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"rules": {
			"@typescript-eslint/no-non-null-assertion": 0,
			"@typescript-eslint/no-explicit-any": 0,
			"@typescript-eslint/no-unused-vars": 0
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"yarn eslint 'src/**/*.ts' 'tests/**/*.ts' --fix"
		]
	},
	"pkg": {
		"outputPath": "execs",
		"scripts": [
			"dist/**/*.js"
		],
		"assets": [
			"node_modules/figlet/fonts/Standard.flf"
		],
		"targets": [
			"node14-win-x64",
			"node14-macos-x64",
			"node14-linux-x64",
			"node14-alpine-x64"
		]
	}
}
